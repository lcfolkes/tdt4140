<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.5" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdt4140.gr1823.app.ui.FxAnalyzeController">
   <items>
      <VBox>
         <children>
            <Label text="ANALYZE" />
            <Label text="Specify gender:" />
            <ComboBox fx:id="cbGender" prefWidth="150.0" promptText="BOTH" />
            <Label text="Specify age group:" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="textInput1" promptText="From" />
                  <TextField fx:id="textInput2" promptText="To" />
               </children>
            </HBox>
            <Label fx:id="errorLabel" text="Label" />
            <Button fx:id="submitButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="169.0" text="Button" />
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
      <VBox minHeight="-Infinity" prefHeight="250.0" prefWidth="200.0">
         <children>
            <Label text="Results" />
            <BarChart fx:id="BarChart" title="Graphical representation">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
            <VBox prefHeight="250.0" prefWidth="350.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="391.0" text="Steps" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
                  <Label fx:id="averageLabel" prefHeight="18.0" prefWidth="250.0" />
               </children>
            </VBox>
         </children>
      </VBox>
   </items>
</SplitPane>

<?xml version="1.0" encoding="UTF-8"?>
<web-app
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">

  <servlet>
  <servlet-name>dailyActivityServlet</servlet-name>
  <servlet-class>tdt4140.gr1823.web.server.dailyActivityServlet</servlet-class>
  </servlet>
  
  <servlet>
  <servlet-name>getRecommendedDailyActivityServlet</servlet-name>
  <servlet-class>tdt4140.gr1823.web.server.getRecommendedDailyActivityServlet</servlet-class>
  </servlet>
  
  <servlet>
  <servlet-name>nationalAverageServlet</servlet-name>
  <servlet-class>tdt4140.gr1823.web.server.nationalAverageServlet</servlet-class>
  </servlet>
  
  <servlet>
  <servlet-name>ShareDataServlet</servlet-name>
  <servlet-class>tdt4140.gr1823.web.server.ShareDataServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ShareDataServlet</servlet-name>
  <url-pattern>/shareData/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>nationalAverageServlet</servlet-name>
  <url-pattern>/getNationalAverage/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>dailyActivityServlet</servlet-name>
  <url-pattern>/dailyActivityServlet/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  <servlet-name>getRecommendedDailyActivityServlet</servlet-name>
  <url-pattern>/getRecommendedDailyActivityServlet/*</url-pattern>
  </servlet-mapping>

</web-app>
